{
  "name": "root",
  "private": true,
  "license": "MIT",
  "main": "./index.js",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "dev": "omni dev -P ./packages/sdk",
    "dev:robot": "omni dev -P ./packages/robot",
    "new": "omni new -P ./packages/sdk",
    "new:robot": "omni new -P ./packages/robot",
    "lint": "lerna run lint",
    "build": "omni build -P ./packages/sdk",
    "build:quick": "omni build -n -P ./packages/sdk",
    "build:robot": "omni build -P ./packages/robot",
    "build:doc": "cd ./packages/sdk && yarn build:demo",
    "release": "omni release -P ./packages/sdk",
    "release:robot": "omni release -P ./packages/robot && node ./packages/robot/configs/release.js"
  },
  "devDependencies": {
    "@omni-door/cli": "^2.3.11",
    "lerna": "^4.0.0"
  }
}
